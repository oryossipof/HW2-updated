<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000"
    tools:context="com.example.minesweeper.EndGame">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/high_score_image_view"
            android:layout_width="400dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/high" />


        <Button
            android:id="@+id/tableButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="60dp"
            android:text="Table Score" />

        <Button
            android:id="@+id/mapButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tableButton"
            android:layout_alignBottom="@+id/tableButton"
            android:layout_alignParentStart="true"
            android:layout_toEndOf="@+id/tableButton"
            android:text="Score on Map" />


    <RelativeLayout
        android:id="@+id/fragmantContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mapButton"
        >

    </RelativeLayout>


    </RelativeLayout>


</LinearLayout>
